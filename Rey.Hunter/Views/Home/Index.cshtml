            <div class="box box-info">
                <div class="box-header">
                    <h3 class="box-title">Quick Addition</h3>
                </div>
                <div class="box-body">
                    <a class="btn btn-app">
                        <i class="fa fa-user-plus"></i> Talent
                    </a>
                    <a class="btn btn-app">
                        <i class="fa fa-building"></i> Company
                    </a>
                    <a class="btn btn-app">
                        <i class="fa fa-tasks"></i> Project
