@model Talent
<div class="row" ng-controller="talent-item-ctrl" ng-init="init('@this.Model.Id')">
    <div class="col-md-3">
        <div class="box box-primary">
            <div class="box-body box-profile">
                <h3 class="profile-username text-center" ng-bind="model.englishName+'('+model.chineseName+')'"></h3>
                <p class="text-muted text-center">@this.Model.CreateAt?.ToString("yyyy/MM/dd") by @this.Model.CreateBy?.Concrete(this.ViewBag.DB)</p>
                <div>
                    <a class="btn btn-default btn-block" ng-click="update('@this.Model.Id')">Edit</a>
                </div>
            </div>
        </div>
        <div class="box box-primary">
            <div class="box-header with-border">
                <h3 class="box-title">Actives</h3>
            </div>
            <div class="box-body">
                @foreach (var log in this.ViewBag.Logs) {
                    @Html.Raw(log)
                    <hr>
                }
            </div>
        </div>
    </div>
    <div class="col-md-9">
        <div class="nav-tabs-custom">
            <ul class="nav nav-tabs">
                <li class="active"><a href="#details" data-toggle="tab" aria-expanded="true">Details</a></li>
                <li class=""><a href="#experiences" data-toggle="tab" aria-expanded="false">Experiences</a></li>
                <li class=""><a href="#attachments" data-toggle="tab" aria-expanded="false">Attachments</a></li>
            </ul>
            <div class="tab-content">
                <div class="tab-pane active" id="details">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="box box-info">
                                <div class="box-header">Basic Information</div>
                                <div class="box-body no-padding">
                                    <table class="table table-striped table-details">
                                        <tr>
                                            <td>Function:</td>
                                            <td>
                                                <span class="label label-info"
                                                      ng-repeat="item in model.functions"
                                                      ng-bind="item.name"></span>
                                            </td>
                                        </tr>
                                        <tr>
                                            <td>Industry:</td>
                                            <td>
                                                <span class="label label-info"
                                                      ng-repeat="item in model.industries"
                                                      ng-bind="item.name"></span>
                                            </td>
                                        </tr>
                                        <tr>
                                            <td>English Name:</td>
                                            <td>@this.Model.EnglishName</td>
                                        </tr>
                                        <tr>
                                            <td>Chinese Name:</td>
                                            <td>@this.Model.ChineseName</td>
                                        </tr>
                                        <tr>
                                            <td>Date Of Birth:</td>
                                            <td>@this.Model.Birthday?.ToString("yyyy/MM/dd")</td>
                                        </tr>
                                        <tr>
                                            <td>Gender:</td>
                                            <td>@this.Model.Gender.EnumDesc()</td>
                                        </tr>
                                        <tr>
                                            <td>Marital Status:</td>
                                            <td>@this.Model.MaritalStatus.EnumDesc()</td>
                                        </tr>
                                        <tr>
                                            <td>Education:</td>
                                            <td>@this.Model.EducationLevel.EnumDesc()</td>
                                        </tr>
                                        <tr>
                                            <td>Language:</td>
                                            <td>@this.Model.Language.EnumDesc()</td>
                                        </tr>
                                        <tr>
                                            <td>Nationality:</td>
                                            <td>@this.Model.Nationality.EnumDesc()</td>
                                        </tr>
                                        <tr>
                                            <td>Job Intension:</td>
                                            <td>@this.Model.Intension.EnumDesc()</td>
                                        </tr>
                                        <tr>
                                            <td>Linkedin Profile:</td>
                                            <td>@this.Model.Linkedin</td>
                                        </tr>
                                    </table>
                                </div>
                            </div>
                            <div class="box box-info">
                                <div class="box-header">Location</div>
                                <div class="box-body">
                                    <table class="table table-striped table-details">
                                        <tr>
                                            <td>Current:</td>
                                            <td>
                                                <span class="label label-info"
                                                      ng-repeat="item in model.currentLocations"
                                                      ng-bind="item.name"></span>
                                            </td>
                                        </tr>
                                        <tr>
                                            <td>Mobility:</td>
                                            <td>
                                                <span class="label label-info"
                                                      ng-repeat="item in model.mobilityLocations"
                                                      ng-bind="item.name"></span>
                                            </td>
                                        </tr>
                                    </table>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="box box-info">
                                <div class="box-header">Contact</div>
                                <div class="box-body">
                                    <table class="table table-striped table-details">
                                        <tr>
                                            <td>Mobile Phone:</td>
                                            <td>@this.Model.Mobile</td>
                                        </tr>
                                        <tr>
                                            <td>Table Phone:</td>
                                            <td>@this.Model.Phone</td>
                                        </tr>
                                        <tr>
                                            <td>Email:</td>
                                            <td>@this.Model.Email</td>
                                        </tr>
                                        <tr>
                                            <td>QQ:</td>
                                            <td>@this.Model.QQ</td>
                                        </tr>
                                        <tr>
                                            <td>Wechat:</td>
                                            <td>@this.Model.Wechat</td>
                                        </tr>
                                    </table>
                                </div>
                            </div>
                            <div class="box box-info">
                                <div class="box-header">Profile Label</div>
                                <div class="box-body">
                                    <table class="table table-striped table-details">
                                        <tr>
                                            <td>Cross Industry Experience:</td>
                                            <td>
                                                <span class="label label-info"
                                                      ng-repeat="location in model.profileLabel.crossIndustries"
                                                      ng-bind="location.name"></span>
                                            </td>
                                        </tr>
                                        <tr>
                                            <td>Cross Function Experience:</td>
                                            <td>
                                                <span class="label label-info"
                                                      ng-repeat="location in model.profileLabel.crossFunctions"
                                                      ng-bind="location.name"></span>
                                            </td>
                                        </tr>
                                        <tr>
                                            <td>Cross Category  Experience:</td>
                                            <td>
                                                <span class="label label-info"
                                                      ng-repeat="location in model.profileLabel.crossCategories"
                                                      ng-bind="location.name"></span>
                                            </td>
                                        </tr>
                                        <tr>
                                            <td>Brands Had Managed:</td>
                                            <td>@this.Model.ProfileLabel.BrandExp</td>
                                        </tr>
                                        <tr>
                                            <td>Cross Channel Experience:</td>
                                            <td>
                                                <span class="label label-info"
                                                      ng-repeat="location in model.profileLabel.crossChannels"
                                                      ng-bind="location.name"></span>
                                            </td>
                                        </tr>
                                        <tr>
                                            <td>Key Account Had Managed:</td>
                                            <td>@this.Model.ProfileLabel.KeyAccountExp</td>
                                        </tr>
                                        <tr>
                                            <td>Others:</td>
                                            <td>@this.Model.ProfileLabel.Others</td>
                                        </tr>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            <div class="box box-info">
                                <div class="box-header">Notes</div>
                                <div class="box-body">
                                    <p>@this.Model.Notes</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="tab-pane" id="experiences">
                    <div class="box box-info">
                        <div class="box-body">
                            <div class="row">
                                <div class="col-md-6" ng-repeat="item in model.experiences">
                                    <div class="box box-info box-solid">
                                        <div class="box-header with-border">
                                            <h3 class="box-title">
                                                <i class="fa fa-building-o"></i>
                                                {{item.company.name}}
                                            </h3>
                                        </div>
                                        <div class="box-body no-padding">
                                            <table class="table table-striped table-details">
                                                <tr>
                                                    <td>Company:</td>
                                                    <td ng-bind="item.company.name"></td>
                                                </tr>
                                                <tr>
                                                    <td>Current Job:</td>
                                                    <td ng-bind="item.currentJob?'Yes':'No'"></td>
                                                </tr>
                                                <tr>
                                                    <td>Time Period:</td>
                                                    <td>{{item.fromYear}}/{{item.fromMonth}} - {{item.toYear}}/{{item.toMonth}}</td>
                                                </tr>
                                                <tr>
                                                    <td>Title:</td>
                                                    <td ng-bind="item.title"></td>
                                                </tr>
                                                <tr>
                                                    <td>In Charge Of:</td>
                                                    <td ng-bind="item.responsibility"></td>
                                                </tr>
                                                <tr>
                                                    <td>Grade:</td>
                                                    <td ng-bind="item.grade"></td>
                                                </tr>
                                                <tr>
                                                    <td>Basic Salary:</td>
                                                    <td ng-bind="item.basicSalary"></td>
                                                </tr>
                                                <tr>
                                                    <td>Basic Salary Months:</td>
                                                    <td ng-bind="item.basicSalaryMonths"></td>
                                                </tr>
                                                <tr>
                                                    <td>Bonus:</td>
                                                    <td ng-bind="item.bonus"></td>
                                                </tr>
                                                <tr>
                                                    <td>Allowance:</td>
                                                    <td ng-bind="item.allowance"></td>
                                                </tr>
                                            </table>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="tab-pane" id="attachments">
                    <div class="box box-info">
                        <div class="box-body no-padding">
                            <ul class="attachment-list">
                                @foreach (var item in this.Model.Attachments) {
                                    <li>
                                        <a class="text" href="@item.Url">@item.Name</a>
                                    </li>
                                }
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@section Head{
    <style>
        .table.table-details { }
            .table.table-details > tbody > tr > td:first-child { width: 160px; text-align: right; }
    </style>
}